<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_van_route_tree" model="ir.ui.view">
        <field name="name">van.route.tree</field>
        <field name="model">van.route</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="region" />
                <field name="day_of_week" />
                <field name="user_id" />
            </list>
        </field>
    </record>


    <record id="view_van_route_form" model="ir.ui.view">
        <field name="name">van.route.form</field>
        <field name="model">van.route</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="region" />
                        </group>
                        <group>
                            <field name="day_of_week" />
                            <field name="user_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Customers">
                            <field name="partner_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_van_route" model="ir.actions.act_window">
        <field name="name">Routes</field>
        <field name="res_model">van.route</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem
        id="van_route_menu"
        name="Routes"
        action="action_van_route"
        parent="operations_menu" />
</odoo>