<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="paperformat_van_receipt" model="report.paperformat">
        <field name="name">Thermal Receipt 80mm</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">0</field>
        <field name="page_width">80</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">2</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <template id="report_van_receipt_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <div class="page"
                        style="direction: rtl; text-align: right; font-family: 'Tahoma', sans-serif; font-size: 11px; color: black;">

                        <div class="text-center"
                            style="border-bottom: 1px dashed black; padding-bottom: 5px; margin-bottom: 10px;">
                            <h4 t-field="o.company_id.name"
                                style="font-weight: bold; margin-bottom: 2px;" />
                            <span t-if="o.company_id.vat">رقم ضريبي: <span
                                    t-field="o.company_id.vat" /></span>
                        </div>

                        <div style="margin-bottom: 10px; line-height: 1.4;">
                            <div>
                                <strong>رقم الإيصال / Receipt: </strong>
                                <span t-field="o.name" />
                            </div>
                            <div>
                                <strong>التاريخ / Date: </strong>
                                <span t-field="o.date_order" t-options='{"widget": "date"}' />
                            </div>
                            <div>
                                <strong>العميل / Customer: </strong>
                                <span t-field="o.partner_id.name" />
                            </div>
                        </div>

                        <table class="table table-sm"
                            style="width: 100%; table-layout: fixed; border-top: 1px solid black; border-bottom: 1px solid black;">
                            <thead>
                                <tr style="font-size: 10px;">
                                    <th class="text-center" style="width: 45%;">الصنف / Item</th>
                                    <th class="text-center" style="width: 20%;">كمية/Quantity</th>
                                    <th class="text-center" style="width: 35%;">إجمالي/Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.order_line" t-as="line">
                                    <td class="text-center">
                                        <span t-field="line.product_id.name" />
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.product_uom_qty" />
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row justify-content-end" style="margin-top: 5px;">
                            <div class="col-12">
                                <table class="table table-sm table-borderless"
                                    style="margin-bottom: 0;">
                                    <tr>
                                        <td class="text-start">الإجمالي قبل الضريبة / Subtotal:</td>
                                        <td class="text-end">
                                            <span t-field="o.amount_untaxed" />
                                        </td>
                                    </tr>
                                    <tr t-if="o.amount_tax > 0">
                                        <td class="text-start">الضريبة / Tax (14%):</td>
                                        <td class="text-end">
                                            <span t-field="o.amount_tax" />
                                        </td>
                                    </tr>
                                    <tr
                                        style="border-top: 1px solid black; font-weight: bold; font-size: 13px;">
                                        <td class="text-start">الصافي / Total Net:</td>
                                        <td class="text-end">
                                            <span t-field="o.amount_total" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="text-center"
                            style="margin-top: 10px; padding: 5px; border: 1px solid #ccc; font-size: 10px;">
                            <span t-field="o.amount_to_text_ar" />
                        </div>

                        <div class="text-center" style="margin-top: 10px; font-size: 10px;">
                            <strong>طريقة الدفع / Payment: </strong>
                            <span t-if="o.collection_mode == 'cash'">نقدي / Cash</span>
                            <span t-if="o.collection_mode == 'check'">شيك / Check</span>
                            <span t-if="o.collection_mode == 'credit'">آجل / Credit</span>
                        </div>

                        <div class="text-center"
                            style="margin-top: 20px; border-top: 1px dashed black; padding-top: 5px;">
                            <p style="margin-bottom: 0;">شكراً لتعاملكم معنا!</p>
                            <p style="font-size: 9px;">Thank you for your business!</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_van_receipt" model="ir.actions.report">
        <field name="name">Van Receipt</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">van_sales.report_van_receipt_template</field>
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_van_receipt" />
    </record>

</odoo>